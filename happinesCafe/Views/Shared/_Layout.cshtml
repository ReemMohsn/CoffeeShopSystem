    @{
    var isHomePage = ViewContext.RouteData.Values["Action"]?.ToString() == "Index" 
                  && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home";
}

    <header class="header">
        <a href="#" class="logo">
            <img src="~/imges/ty.png" alt="">
            <img src="~/imges/ttt.png" alt="">
        </a>
        <nav class="navbar">
            @if (isHomePage)
            {
                <!-- إذا كانت الصفحة الحالية هي الرئيسية، استخدم # للانتقال إلى الأقسام -->
                <a href="#home">Home</a>
                <a href="#Strenght">AboutUs</a>
                <a href="#Menu">Menu</a>
                <a href="#products">Product</a>
                <a href="#Review">Review</a>
                <a href="#contact">ContactUs</a>
                <a href="#footer">footer</a>
            }
            else
            {
                <!-- إذا كانت الصفحة الحالية ليست الرئيسية، استخدم asp-page للانتقال إلى الصفحة الرئيسية مع # -->
                <a asp-controller="Home" asp-action="Index" asp-fragment="home">Home</a>
                <a asp-controller="Home" asp-action="Index" asp-fragment="Strenght">AboutUs</a>
                <a asp-controller="Products" asp-action="Menu">Menu</a>
                <a asp-controller="Products" asp-action="Products">Products</a>
                <a asp-controller="Home" asp-action="Index" asp-fragment="Review">Review</a>
                <a asp-controller="Home" asp-action="Index" asp-fragment="contact">ContactUs</a>
                <a href="#footer">footer</a>
            }
        </nav>
        <div class="icons">
            @{
                var UserName = Context.Session.GetString("UserName");
               var UserId = Context.Session.GetInt32("UserId");
            }

            @if (UserName==null)
            {
             <a asp-controller="SignInUp" asp-action="SignIn" class="sign">
                <img src="~/imges/4.png" alt="" class="signLogo">
                Sign in
                </a>
            }
            else
            {
                <a asp-controller="Profile" asp-action="Details" asp-route-id=@UserId class="sign">
                <img src="~/imges/4.png" alt="" class="signLogo">
                 @UserName
                </a>
                <a asp-controller="Buying" asp-action="DisPlayOrders"  class="cartcontainer">
                <img src="~/imges/clipboard.png" alt="" class="cart">
                </a>
            }
            
            <a asp-controller="Favorit" asp-action="Index" >
                <img src="~/imges/123.png" alt="" class="galeb">
            </a>
            <a asp-controller="Buying" asp-action="Cart"  class="cartcontainer">
                <img src="~/imges/ii.png" alt="" class="cart">
                @*<span>0</span>*@
            </a>
            <div><img src="~/imges/5.png" alt="" id="menu-btn"></div>
        </div>
    </header>
            @RenderBody()
