@model happinesCafe.Models.Admin.ReviewDetailsViewModel

@{
    ViewData["Title"] = "Delete Review Confirmation";
    Layout = "_Layout1";
}

<div class="review-delete-container">

    <h1 class="dashboard-title">Delete Review</h1>
    <h3 class="delete-warning-title">Are you sure you want to delete this review?</h3>
    <p class="delete-warning-text">This action cannot be undone.</p>

    <div class="details-card card">
         <div class="info-block">
            <h4 class="section-subtitle">Review to be Deleted</h4>
            <p><strong>Review ID:</strong> @Model.IdReview</p>
            <p><strong>Customer:</strong> @Model.CustomerName</p>
            <p><strong>Product:</strong> @Model.ProductName</p>
            <p><strong>Date:</strong> @(Model.ReviewDate?.ToString("dd MMM yyyy, HH:mm") ?? "N/A")</p>
            <p><strong>Rating:</strong>
                 <span class="review-rating">
                    @for(int i = 1; i <= 5; i++)
                    {
                        <ion-icon name="@(i <= Model.Rating ? "star" : "star-outline")" class="star-icon @(i <= Model.Rating ? "filled" : "")"></ion-icon>
                    }
                </span>
             </p>
             @* Use Reviewtext *@
            <p><strong>Review Text:</strong></p>
            <div class="comment-box">
                @Html.DisplayFor(model => model.Reviewtext)
            </div>
         </div>

         <hr class="details-hr">

        <div class="action-buttons-footer">
             <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdReview" />
                <button type="submit" class="action-button delete-button-lg">
                    <ion-icon name="trash-outline" class="btn-icon"></ion-icon> Confirm Delete
                </button>
            </form>
            <a asp-action="Index" class="action-button back-button-lg">
                 <ion-icon name="arrow-back-outline" class="btn-icon"></ion-icon> Cancel
            </a>
        </div>
    </div>
</div>

<style>
    /* Styles are largely the same as Details, ensure consistency */
    .review-delete-container { padding: 20px; }
    .delete-warning-title { color: #e74c3c; font-size: 2.6rem; margin-bottom: 10px; font-family: 'BodoniModa_72pt-Regular', serif; }
    .delete-warning-text { color: #F2F1F4; font-size: 2rem; margin-bottom: 20px; font-family: 'aldhabi', sans-serif; }
    /* Reused styles */
    .details-card { padding: 30px; background-color: #723A1F; border-radius: 15px; box-shadow: 0 2px 8px rgba(177, 110, 37, 0.7); color: #F2F1F4; }
    .info-block { margin-bottom: 20px; }
    .section-subtitle { font-family: 'BodoniModa_72pt-Regular', serif; font-size: 2.4rem; color: #b16e25; border-bottom: 1px solid #b16e25; padding-bottom: 5px; margin-bottom: 15px; }
    .info-block p { font-size: 2rem; font-family: 'aldhabi', sans-serif; margin-bottom: 10px; line-height: 1.5; }
    .info-block p strong { color: #f2f1f4; font-weight: normal; min-width: 120px; display: inline-block; }
    .review-rating { white-space: nowrap; }
    .star-icon { color: #ccc; font-size: 2.2rem; margin: 0 1px; vertical-align: middle; }
    .star-icon.filled { color: #ffc107; }
    .comment-box { background-color: #1d120c; border: 1px solid #b16e25; border-radius: 8px; padding: 15px; margin-top: 5px; min-height: 80px; font-family: 'aldhabi', sans-serif; font-size: 2rem; line-height: 1.5; color: #F2F1F4; }
    .details-hr { border: 0; height: 1px; background-color: #b16e25; margin: 25px 0; }
    .action-buttons-footer { margin-top: 30px; display: flex; flex-wrap: wrap; gap: 15px; justify-content: flex-start; }
    .action-button { display: inline-flex; align-items: center; gap: 8px; padding: 10px 20px; border-radius: 20px; text-decoration: none; font-size: 2rem; font-family: 'aldhabi', sans-serif; cursor: pointer; transition: all 0.2s ease; border: none; line-height: 1; }
    .btn-icon { font-size: 2.4rem; }
    .delete-button-lg { background-color: #e74c3c; color: #F2F1F4; }
    .delete-button-lg:hover { background-color: #c0392b; transform: scale(1.03); }
    .back-button-lg { background-color: #6c757d; color: #F2F1F4; }
    .back-button-lg:hover { background-color: #5a6268; transform: scale(1.03); }
</style>
