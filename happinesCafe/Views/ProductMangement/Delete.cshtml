@model happinesCafe.Models.Product 
@{
	Layout = "_Layout1";
	ViewData["Title"] = "حذف المنتج"; 
}
@section Links{
        <link rel="stylesheet" href="~/css/deleteproduct.css">
        <partial name="_ValidationScriptsPartial" />;
       
}

		<div class="product-details-container">

    <div class="product-details-card">
        <h4 class="card-title">Delete Product</h4>
        <hr class="card-divider">

        <div class="detail-row">
            <span class="detail-label">Product Name:</span>
            <span class="detail-value" data-bind="NameProduct">@Model.NameProduct</span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Category:</span>
            <span class="detail-value" data-bind="IdCategoryNavigation.NameCategory">@Model.IdCategoryNavigation.NameCategory</span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Picture:</span>
            <div class="detail-value">
                <img class="product-image" src="~/imges/@Model.Picture" alt="Product Picture" data-bind-if="Picture" data-bind-attr-src="'~/imges/' + Picture" width="150">
           </div>
        </div>

        <div class="detail-row">
            <span class="detail-label">Description:</span>
            <span class="detail-value" data-bind="About">@Model.About</span>
        </div>

        <div class="form-actions">
            <form asp-action="Delete" method="post" data-bind-attr-id="'deleteForm_' + IdProduct">
                <input type="hidden" data-bind="IdProduct" />
                <input type="submit" class="btn btn-dangerr btn-lg btnn" value="Delete Product">
                <a asp-action="DisplayProduct" class="btn btn-light btn-lg btnn">Back to List</a>
            </form>
        </div>
    </div>
</div>
